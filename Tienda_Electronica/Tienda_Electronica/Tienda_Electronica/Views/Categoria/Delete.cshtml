@model Tienda_Electronica.Models.Categoria

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Categoria</h1>
<h3>¿Quieres eliminar esta categoria?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ID_Categoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ID_Categoria)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre_Categoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre_Categoria)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion_Categoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion_Categoria)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        @Html.HiddenFor(model => model.ID_Categoria)
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-secondary">Regresar  al listado</a>
    </form>
</div>
