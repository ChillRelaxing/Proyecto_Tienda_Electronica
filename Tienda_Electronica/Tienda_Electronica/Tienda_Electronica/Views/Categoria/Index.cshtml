@model IEnumerable<Tienda_Electronica.Models.Categoria>

@{
    ViewData["Title"] = "Index";
    ViewData["TitleHeader"] = "Categorias";
}

@* <h1>Categorias</h1>
 *@
<p>
    <a asp-action="Create" class="btn btn-primary">Agregar Categoria</a>
</p>
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID_Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre_Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion_Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID_Categoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_Categoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion_Categoria)
            </td>
            
                <td>
                    <center>
                        <a class="btn btn-success" href="@Url.Action("Edit", new { id = item.ID_Categoria})">Editar</a>
                        <a class="btn btn-danger" href="@Url.Action("Delete", new { id = item.ID_Categoria })">Eliminar</a>
                    </center>
                </td>
        </tr>
}
    </tbody>
</table>
