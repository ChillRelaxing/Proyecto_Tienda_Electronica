@model Tienda_Electronica.Models.Producto

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar Producto</h1>

<h3>¿Quieres eliminar este producto?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ID_Producto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ID_Producto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre_Producto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre_Producto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion_Producto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion_Producto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrecioUnitario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrecioUnitario)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre_Categoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre_Categoria)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.HiddenFor(model => model.ID_Producto)
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Regresar al listado</a>
    </form>
</div>

